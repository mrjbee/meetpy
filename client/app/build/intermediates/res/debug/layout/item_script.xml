<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:layout_column="2"
    >

    <ImageView
        android:layout_gravity="top"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_rowSpan="2"
        android:id="@+id/item_icon"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:src="@drawable/script"
        android:layout_margin="10dp"/>

    <TextView
        android:layout_gravity="bottom"
        android:layout_row="0"
        android:layout_column="1"
        style="@style/Text.Item.Light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/item_value_text" />

    <TextView
        android:paddingRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="top"
        android:layout_row="1"
        android:layout_column="1"
        style="@style/Text.Item.Light.Optional"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Here are gonint gto be addes some may be a big description so it shouldn`t"
        android:id="@+id/item_sub_value_text"/>
