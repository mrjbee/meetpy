<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/header"
    style="@style/Page.Header">

    <TextView
        android:gravity="bottom"
        style="@style/Text.Header.Caption"
        android:layout_centerVertical="true"
        android:layout_marginLeft="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MeetPY"
        android:id="@+id/page_caption"/>

    <TextView
        android:layout_toRightOf="@+id/page_caption"
        android:layout_alignBaseline="@+id/page_caption"
        style="@style/Text.Header.Secondary"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remote Runner"
        android:id="@+id/page_description"/>
</RelativeLayout>
