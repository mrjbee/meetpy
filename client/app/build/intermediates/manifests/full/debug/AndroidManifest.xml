<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="team.monroe.org.meetpy"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="team.monroe.org.meetpy.AppMeetPy"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="team.monroe.org.meetpy.ServerDashboardActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="team.monroe.org.meetpy.ServerActivity"
            android:label="@string/title_activity_server_view"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Transperent.NoAnimation" >
        </activity>
        <activity
            android:name="team.monroe.org.meetpy.ScripActivity"
            android:label="Script Execution"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Transperent.NoAnimation" >
        </activity>
    </application>

</manifest>