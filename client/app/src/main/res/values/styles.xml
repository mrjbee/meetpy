<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.NoActionBar">
        <!--In order to debug which field get no style -->
        <item name="android:textColor">#ffff3c2f</item>
    </style>

    <style name="AppTheme.Transperent.NoAnimation" parent="AppTheme">
        <item name="android:inAnimation">@null</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>


    <style name="Panel.Main" parent="AppTheme">
        <item name="android:background">#ffe7e7e7</item>
    </style>

    <style name="Page.Background" parent="AppTheme">
        <item name="android:background">#d7d7d7</item>
    </style>

    <style name="Page.Header" parent="AppTheme">
        <item name="android:background">@drawable/top_panel</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">80dp</item>
    </style>

    <style name="Page.Body" parent="AppTheme">
        <item name="android:background">@drawable/body_panel</item>
    </style>

    <style name="Text.Panel.Main" parent="AppTheme">
        <item name="android:textColor">#ff373737</item>
        <item name="android:textSize">14sp</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowColor">#FFFFFFFF</item>
    </style>


    <style name="Text.Header.Caption" parent="AppTheme">
        <item name="android:textColor">#707070</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowColor">#FFFFFFFF</item>
    </style>

    <style name="Text.Header.Secondary" parent="Text.Header.Caption">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
    </style>


    <style name="Text.Background" parent="AppTheme">
        <item name="android:textColor">#707070</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowColor">#FFFFFFFF</item>
    </style>

    <style name="Text.Background.Caption" parent="Text.Background">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="Text.Item.Light" parent="AppTheme">
        <item name="android:textColor">#707070</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Item.Light.Optional" parent="Text.Item.Light">
        <item name="android:textColor">#707070</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">italic</item>
    </style>


    <style name="Text.Item.Light.Header" parent="Text.Item.Light">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#ff828282</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowColor">#ffffffff</item>
    </style>


    <style name="Text.Caption.Panel.Main" parent="Text.Panel.Main">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.Optional.Panel.Main" parent="Text.Panel.Main">
        <item name="android:textColor">#ff646464</item>
        <item name="android:textSize">12sp</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">0</item>
    </style>

    <style name="Text.Optional.Value.Panel.Main" parent="Text.Optional.Panel.Main">
        <item name="android:textColor">#e21556</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="Button.Link.Main" parent="Text.Panel.Main">
        <item name="android:textColor">#e21556</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Button.Link.Small.Main" parent="Button.Link.Main">
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">10sp</item>
        <item name="android:minHeight">30dp</item>
    </style>

</resources>
