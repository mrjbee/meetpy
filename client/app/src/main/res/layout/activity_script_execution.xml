<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="team.monroe.org.meetpy.ScriptExecutionActivity"
    style="@style/Panel.Main"
    android:paddingRight="20dp"
    android:paddingLeft="20dp"
    android:paddingTop="20dp"
    >

    <ImageView
        android:layout_marginRight="5dp"
        android:id="@+id/se_top_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/ic_launcher"/>

    <TextView
        style="@style/Text.Caption.Panel.Main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Script Name"
        android:id="@+id/se_caption"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/se_top_icon"/>

    <TextView
        style="@style/Text.Optional.Panel.Main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Here come script description"
        android:id="@+id/se_description"
        android:layout_below="@+id/se_caption"
        android:layout_alignLeft="@+id/se_caption"
        android:layout_marginBottom="15dp"/>

    <ScrollView
        android:layout_below="@+id/se_description"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:orientation="vertical"
            android:id="@+id/se_content_panel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true">
        </LinearLayout>
    </ScrollView>
    <ImageView
        android:scaleType="fitXY"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/se_shadow_image"
        android:src="@drawable/shadow_down"
        android:layout_below="@+id/se_description"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
