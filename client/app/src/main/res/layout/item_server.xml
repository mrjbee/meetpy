<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="3dp"
    android:paddingBottom="3dp"
    >

    <RelativeLayout
        android:background="@drawable/panel_round_whitest_2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

    <TextView
        style="@style/Text.Optional.Panel.Main"
        android:paddingLeft="5dp"
        android:id="@+id/item_status_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:text="Online"
        android:layout_alignParentRight="true"/>

    <TextView
        style="@style/Text.Optional.Panel.Main"
        android:layout_toLeftOf="@+id/item_status_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Text.Panel.Main"
        android:text="Server Alias"
        android:id="@+id/item_title"
        android:layout_below="@+id/item_status_value"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Text.Optional.Panel.Main"
        android:text="Server details"
        android:id="@+id/item_description"
        android:layout_below="@+id/item_title"
        />

    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/item_task_caption"
        android:layout_below="@+id/item_description"
        style="@style/Text.Optional.Panel.Main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Task(s)"/>

    <LinearLayout
        android:layout_below="@+id/item_task_caption"
        android:id="@+id/item_task_content_panel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    </LinearLayout>
    </RelativeLayout>


</LinearLayout>