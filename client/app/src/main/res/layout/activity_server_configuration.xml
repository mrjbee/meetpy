<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="team.monroe.org.meetpy.ServerConfigurationActivity"
    style="@style/Text.Panel.Main">

    <ImageView
        android:layout_marginTop="20dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/sc_top_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/ic_launcher"/>

    <TextView
        style="@style/Text.Caption.Panel.Main"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Server Configuration"
        android:id="@+id/sc_caption"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/sc_top_icon"
        android:singleLine="true"
        android:maxLines="1"/>
    <TextView
        style="@style/Text.Optional.Panel.Main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find all configuration parameters above"
        android:id="@+id/sc_description"
        android:layout_below="@+id/sc_caption"
        android:layout_alignLeft="@+id/sc_caption"
      />

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/sc_description"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayout">

        <EditText
            style="@style/Text.Panel.Main"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText"
            android:hint="Server Alias"
            android:singleLine="true"
            android:maxLines="1"/>

        <EditText
            style="@style/Text.Panel.Main"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText2"
            android:hint="192.168.0.6:7787"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:maxLines="1"
        />

    </LinearLayout>

    <Button
        style="@style/Text.Panel.Main"
        android:id="@+id/sc_apply_btn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Create"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>
