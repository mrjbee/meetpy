<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2"
    android:rowCount="2"
    android:layout_marginBottom="15dp"
    >

    <TextView
        android:layout_column="0"
        android:layout_row="0"
        style="@style/Text.Panel.Main"
        android:id="@+id/component_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Argument name"/>

    <Button
        android:layout_gravity="right"
        android:layout_column="1"
        android:layout_row="0"
        style="@style/Button.Link.Small.Main"
        android:id="@+id/component_warn_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Not supported"/>

    <TextView
        android:layout_marginLeft="30dp"
        android:layout_columnSpan="2"
        android:layout_column="0"
        android:layout_row="1"
        style="@style/Text.Optional.Panel.Main"
        android:id="@+id/component_description_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Argument description"/>




</GridLayout>